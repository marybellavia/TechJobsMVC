<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key" 
                       checked="@column.Key == 'all''"/>
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobsResults != null)
{

    <h3>@ViewBag.jobsResults.Count Result(s)</h3>

    /* using nested foreach loops to accesss dictionary from ViewBag.jobsResults (which is a list)
    * and then the inner loop is so I can access the kvp in each dictionary */
  

    @foreach (Dictionary<string, string> job in ViewBag.jobsResults)
    {
        <table class="job-listing">
        @foreach (KeyValuePair<string, string> kvp in job)
        {
            
                <tr>
                    <td>@kvp.Key</td>
                    <td>@kvp.Value</td>
                </tr>
            
        }
        </table>
    }

    // TODO #2 - Loop over jobs dictionary and display all job fields 
}